{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "ScanForge.Workers": "Debug"
    }
  },
  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin@mongodb_hackathon:27017",
    "DatabaseName": "Hackathon_FIAP"
  },
  "Redis": {
    "ConnectionString": "redis_hackathon:6379"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq_hackathon",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin",
    "QueueName": "video_queue",
    "DeadLetterExchange": "dlx_video_exchange",
    "DeadLetterQueue": "dlq_video_queue",
    "MessageTtlMilliseconds": 300000,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "HeartbeatSeconds": 60
  },
  "VideoStorage": {
    "BasePath": "/uploads",
    "TempFramesPath": "/tmp/scanforge_frames"
  },
  "FFMpeg": {
    "Path": "/usr/bin/ffmpeg",
    "FrameQualityCrf": 23
  },
  "Optimization": {
    "DurationThreshold": 120,
    "OptimizedFps": 0.5,
    "DefaultFps": 1.0
  },
  "SignalR": {
    "HubUrl": "http://videonest_service:8080/videoHub"
  },
  "SkiaSharp": {
    "HarfBuzzUseDefaultFont": true,
    "GdiPlusEnabled": true
  }
}